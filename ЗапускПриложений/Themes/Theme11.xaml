<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="GradBrush11">
        <GradientStop x:Name="GradientStop21" Offset="0.5" Color="Black" />
        <GradientStop x:Name="GradientStop22" Offset="1" Color="White" />
    </LinearGradientBrush>
    <Storyboard x:Key="AnimationTheme11">
        <ColorAnimation
                                AutoReverse="True"
                                RepeatBehavior="Forever"
                                Storyboard.TargetName="{Binding ElementName=GradientStop21}"
                                Storyboard.TargetProperty="Background.Color"
                                From="Black"
                                To="White"
                                Duration="0:0:2" />
        <ColorAnimation
                                AutoReverse="True"
                                RepeatBehavior="Forever"
                                Storyboard.TargetName="{Binding ElementName=GradientStop22}"
                                Storyboard.TargetProperty="Background.Color"
                                From="White"
                                To="Black"
                                Duration="0:0:2" />
    </Storyboard>
</ResourceDictionary>